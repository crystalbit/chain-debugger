{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "build",
    "noEmit": false,
    "rootDir": ".",
    "types": [
      "node",
      "electron"
    ]
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}